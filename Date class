#include<iostream>
#include<stdio.h>
using namespace std;
class Date
{
private:
	int year;
	int month;
	int day;
public:
	bool set(int y,int m,int d);
	void showday();
	int judgeday();
	int gety() { return year; }
	int getm() { return month; }
	int getd() { return day; }
	void judgewhen();
	Date() {
		year = 2013;
		month = 8;
		day = 28;
	}
	void set(Date &a) { year = a.year; month = a.month; day = a.day; }
	Date(int y, int m, int d) :year(y), month(m), day(d) {}
};
inline bool Date::set(int y,int m,int d)
{
	if (y == 0)
		return false;
	else if ((y % 4 == 0 && y % 100 != 0)||y%400==0)
	{
		if (m <= 0 || m > 12)
			return false;
		else
		{
			if (m == 1 || m == 3 || m == 5 || m == 7 || m == 8 || m == 10 || m == 12)
			{
				if (d > 31 || d< 1)
					return false;
			}
			else if (m == 4 || m == 6 || m == 9 || m == 11)
			{
				if (d > 30 || d < 1)
					return false;
			}
			else 
			{
				if (d > 29 || d < 1)
					return false;
			}

		}
	}//é—°å¹´
	else
	{
		if (m <= 0 || m > 12)
			return false;
		else
		{
			if (m == 1 || m == 3 || m == 5 || m == 7 || m == 8 || m == 10 || m == 12)
			{
				if (d > 31 || d < 1)
					return false;
			}
			else if (m == 4 || m == 6 || m == 9 || m == 11)
			{
				if (d > 30 || d < 1)
					return false;
			}
			else 
			{
				if (d > 28 || d < 1)
					return false;
			}

		}
	}
	year = y;
	month = m;
	day = d;
	return true;
}
inline void Date::showday()
{
	cout << month << "/" << day << "/" << year<<endl;
}
inline int Date::judgeday() {
	int i=0, d=0;
	int run[12] = { 31,29,31,30,31,30,31,31,30,31,30,31 };
	int con[12] = { 31,28,31,30,31,30,31,31,30,31,30,31 };
	if ((year % 4 == 0 && year % 100 != 0) || year% 400 == 0)
	{
		for (i = 0; i < month - 1; i++)
			d += run[i];
		d += day;
	}
	else {
		for (i = 0; i < month - 1; i++)
			d += con[i];
		d += day;
	}
	//cout << "the day is " << d << "days" << endl;
	return d;
}
inline void Date::judgewhen() {
	int someday, m, n, i, d = 0;
	m = year - year / 1000 * 1000;
	n = m - m / 100 * 100 - 1;
	int run[12] = { 31,29,31,30,31,30,31,31,30,31,30,31 };
	int con[12] = { 31,28,31,30,31,30,31,31,30,31,30,31 };
	if ((year % 4 == 0 && year % 100 != 0) || year % 400 == 0)
	{
		for (i = 0; i < month - 1; i++)
			d += run[i];
		d += day;
	}
	else {
		for (i = 0; i < month - 1; i++)
			d += con[i];
		d += day;
	};
	someday = (n + n / 4 - n / 100 + n / 400 + d) % 7;
	switch (someday) {
	case 1:cout << "Monday"; break;
	case 2:cout << "Tuesday"; break;
	case 3:cout << "Wednesday"; break;
	case 4:cout << "Thursday"; break;
	case 5:cout << "Friday"; break;
	case 6:cout << "Saturday"; break;
	case 0:cout << "Sunday"; break;
	}
}
